<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon"
            android:contentDescription="Profile Icon" />

        <!-- Name Text -->
        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Bottom Icon Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginHorizontal="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:weightSum="4">

        <!-- Icon 1: Troll -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cart" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Troll"
                android:textSize="12sp"
                android:textColor="#7D47FF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Icon 2: Fingerprint -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/fingerprintButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/fingerpint"
                android:contentDescription="Fingerprint Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finger\nprint"
                android:textSize="12sp"
                android:textColor="#7D47FF"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Icon 3: Wishlist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/favorite"
                android:contentDescription="Wishlist Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wishlist"
                android:textSize="12sp"
                android:textColor="#7D47FF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Icon 4: Voucher -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/voucher"
                android:contentDescription="Voucher Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher"
                android:textSize="12sp"
                android:textColor="#7D47FF"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation Section -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/navigation_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Home Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@id/homeIcon"
                        android:layout_width="45dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/home_icon" />
                </LinearLayout>

                <!-- Categories Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@id/categoriesIcon"
                        android:layout_width="45dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/categories_icon" />
                </LinearLayout>

                <!-- Cart Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@id/cartBtn"
                        android:layout_width="45dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/cart_icon" />
                </LinearLayout>

                <!-- Wishlist Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@id/wishlistIcon"
                        android:layout_width="45dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/wishlist_icon" />
                </LinearLayout>

                <!-- Profile Icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@id/profileIcon"
                        android:layout_width="44dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/profile_icon" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
