<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#E6E6FA"> <!-- Ripple color (lighter lavender shade) -->

    <item>
        <shape android:shape="rectangle">
            <!-- Lavender background -->
            <solid android:color="#E6E6FA" />

            <!-- Rounded corners -->
            <corners android:radius="10dp" />

            <!-- Optional border -->
            <stroke
                android:width="1dp"
                android:color="#D8BFD8" /> <!-- Thistle border color -->
        </shape>
    </item>
</ripple>
